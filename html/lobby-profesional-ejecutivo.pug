      script(src="https://code.jquery.com/jquery-3.6.1.min.js") 
      script(src="../js/global.js")
      script(src="../vendor/slick.min.js")
      script(src="../vendor/slick-lightbox.min.js")


      script.
      
         // Body width size
         const widthDevice = document.getElementsByTagName('body')[0].clientWidth;

         if ( widthDevice < 1140 ){
            // Accordeon
            accordeonSection( '._c-exploration-routes' )
         }

         // Carousel for modalidades
         $('._c-slide-slick-imgside ._c-slide-slick-imgside--modalidadesList').slick({
            dots: false,
            infinite: false,
            speed: 300,
            slidesToShow: 2,
            centerMode: true,
            variableWidth: true,
            prevArrow: '.modalidadNav.prev',
            nextArrow: '.modalidadNav.next',
            responsive: [
               {
                  breakpoint: 700,
                  settings: {
                     slidesToShow: 1,
                     slidesToScroll: 1,
                     centerMode: false,
                     variableWidth: false,                     
                  }
               }
            ]            
         });
         if ( widthDevice >= 1140 ){
            // Carousel for modalidades
            $('._c-events-in-career-section--slidepart').slick({
               arrows: false,
               dots: false,
               infinite: false,
               speed: 300,
               slidesToShow: 3,
            });
         }

         if ( (widthDevice >= 740) && (widthDevice < 1140) ){
            // Carousel for modalidades
            $('._c-events-in-career-section--slidepart').slick({
               dots: true,
               infinite: false,
               speed: 300,
               slidesToShow: 2,
               prevArrow: $('._c-events-in-career-section--nav.prev'),
               nextArrow: $('._c-events-in-career-section--nav.next')
            });
         }

         if ( widthDevice < 740 ){

            // Carousel for modalidades
            $('._c-events-in-career-section--slidepart').slick({
               dots: true,
               infinite: true,
               speed: 300,
               slidesToShow: 1,
               prevArrow: $('._c-events-in-career-section--nav.prev'),
               nextArrow: $('._c-events-in-career-section--nav.next')
            });
         }
