      script.
      
         // Body width size
         const widthDevice = document.getElementsByTagName('body')[0].clientWidth;

         // === Carousel scripts === 

         // Carousel for modalidades
         $('._slide-slick-imgside ._slide-slick-imgside--modalidadesList').slick({
            dots: false,
            infinite: false,
            speed: 300,
            slidesToShow: 2,
            centerMode: true,
            variableWidth: true,
            prevArrow: '.modalidadNav.prev',
            nextArrow: '.modalidadNav.next'
         });      

         if ( widthDevice >= 1140 ){
            // Carousel for modalidades
            $('._c-events-in-career-section--slidepart').slick({
               arrows: false,
               dots: false,
               infinite: false,
               speed: 300,
               slidesToShow: 3,
            });
         }

         if ( (widthDevice >= 740) && (widthDevice < 1140) ){
            // Carousel for modalidades
            $('._c-events-in-career-section--slidepart').slick({
               dots: true,
               infinite: false,
               speed: 300,
               slidesToShow: 2,
               prevArrow: $('._c-events-in-career-section--nav.prev'),
               nextArrow: $('._c-events-in-career-section--nav.next')
            });
         }

         if ( widthDevice < 740 ){
            // Carousel for modalidades
            $('._c-events-in-career-section--slidepart').slick({
               dots: true,
               infinite: true,
               speed: 300,
               slidesToShow: 1,
               prevArrow: $('._c-events-in-career-section--nav.prev'),
               nextArrow: $('._c-events-in-career-section--nav.next')
            });
         }
